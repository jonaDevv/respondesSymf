{% extends 'base.html.twig' %}

{% block title %}Pregunta: {{ pregunta.enunciado }}{% endblock %}

{% block body %}
    <a href="{{ path('app_pregunta') }}" class="">Volver al listado</a>

    <div class="container">
        <h1>{{ pregunta.enunciado }}</h1>
        
        <div class="opciones" data-pregunta-id="{{ pregunta.id }}" data-usuario-id="{{ app.user.id }}">
            <span data-opcion="a">{{pregunta.a}}</span>
            <span data-opcion="b">{{pregunta.b}}</span>
            <span data-opcion="c">{{pregunta.c}}</span>
            <span data-opcion="d">{{pregunta.d}}</span>
        </div>
        
        <button class="responder-btn">Responder</button>
        
    </div>


    <!-- Si quieres mostrar un grÃ¡fico, puedes usar Chart.js -->
    <canvas id="respuestasChart" width="400" height="200"></canvas>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    console.log({{ pregunta.id | json_encode(constant('JSON_PRETTY_PRINT')) }});
</script>
    
{% endblock %}
